---
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
import { HIGHLIGHTS } from "@consts";
import { getAllHighlights } from "@lib/highlights";
import HighlightSchema from "@components/HighlightSchema.astro";

const highlights = await getAllHighlights();
---

<PageLayout title={HIGHLIGHTS.TITLE} description={HIGHLIGHTS.DESCRIPTION}>
  <HighlightSchema items={highlights} slot="head" />
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 auto-rows-fr not-prose">
    {highlights.map((item, index) => (
      <div class={`relative group flex flex-col justify-between p-4 rounded-xl bg-neutral-50 dark:bg-white/5 border border-black/5 dark:border-white/10 hover:border-black/10 dark:hover:border-white/20 transition-all hover:scale-[1.01] ${index === 0 ? "sm:col-span-2" : ""}`}>
        <div class="flex flex-col gap-2">
          <div class="flex items-start justify-between gap-2">
            <Link href={item.url} external={item.url.startsWith("http")} aria-label={item.title} class="font-medium text-black dark:text-white text-base leading-tight after:absolute after:inset-0">
              {item.title}
            </Link>
            {item.url.startsWith("http") && <span class="text-xs text-neutral-400 shrink-0 mt-0.5">â†—</span>}
          </div>
          <p class="text-sm text-neutral-600 dark:text-neutral-400 leading-snug">
            {item.description}
          </p>
        </div>
        {item.thought && (
          <div class="mt-3 pt-3 border-t border-black/5 dark:border-white/5 text-xs text-neutral-500 relative z-10">
            <span class="italic [&_a]:underline [&_a]:decoration-neutral-400 dark:[&_a]:decoration-neutral-600 [&_a:hover]:text-black dark:[&_a:hover]:text-white" set:html={item.thought} />
          </div>
        )}
      </div>
    ))}
  </div>
</PageLayout>
