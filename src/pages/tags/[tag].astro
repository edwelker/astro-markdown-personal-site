---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { getPostHref } from "@lib/blog";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);

  // Get unique tags
  const tags = [...new Set(posts.flatMap((post) => post.data.tags || []))];

  return tags.map((tag) => {
    // Filter posts for this tag
    const taggedPosts = posts.filter((post) => post.data.tags?.includes(tag));

    // Sort by date, most recent first
    taggedPosts.sort(
      (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
    );

    return {
      params: { tag },
      props: { posts: taggedPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

// Group posts by year
type Acc = {
  [year: string]: CollectionEntry<"blog">[];
};

const postsByYear = posts.reduce((acc: Acc, post) => {
  const year = post.data.date.getUTCFullYear().toString();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(postsByYear).sort((a, b) => parseInt(b) - parseInt(a));

function getPostImage(post) {
  if (post.data.coverImage) {
    return post.data.coverImage.src || post.data.coverImage;
  }
  const markdownImage = post.body.match(/!\[[^\]]*\]\(([^)\s]+)/);
  if (markdownImage) return markdownImage[1];
  const htmlImage = post.body.match(/<img[^>]+src=["']([^"']+)["']/);
  if (htmlImage) return htmlImage[1];
  return undefined;
}
---

<Layout title={`Topic: ${tag}`} description={`Posts with the topic: ${tag}`}>
  <Container>
    <div class="flex justify-between items-baseline mb-8">
      <h1 class="font-semibold text-2xl text-black dark:text-white capitalize">#{tag}</h1>
      <Link href="/tags/" class="text-[9px] font-mono uppercase tracking-[0.1em] text-neutral-500 hover:text-black dark:hover:text-white transition-colors">
        View all topics &rarr;
      </Link>
    </div>
    
    <div class="space-y-10" data-pagefind-ignore>
      <div class="space-y-8">
        {years.map((year) => (
          <section class="animate space-y-4">
            <div class="font-semibold text-black dark:text-white border-b border-black/5 dark:border-white/5 pb-2">
              {year}
            </div>
            <div>
              <ul class="not-prose flex flex-col gap-2">
                {postsByYear[year].map((post) => {
                  const coverImage = getPostImage(post);
                  return (
                    <li>
                      <Link href={getPostHref(post)} class="group block p-2 -mx-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors no-underline">
                        <div class="flex justify-between items-start gap-4">
                          <div class="flex flex-col gap-1">
                            <span class="font-medium text-black dark:text-white group-hover:underline decoration-1 underline-offset-2">
                              {post.data.title}
                            </span>
                            <p class="text-sm text-neutral-500">
                              {post.data.date.getUTCFullYear()}-{String(post.data.date.getUTCMonth() + 1).padStart(2, '0')}-{String(post.data.date.getUTCDate()).padStart(2, '0')}
                            </p>
                          </div>
                          {coverImage && (
                            <div class="shrink-0 w-24 h-24 overflow-hidden rounded-md bg-neutral-100 dark:bg-neutral-800">
                              <img 
                                src={coverImage} 
                                alt={post.data.title} 
                                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105" 
                              />
                            </div>
                          )}
                        </div>
                      </Link>
                    </li>
                  );
                })}
              </ul>
            </div>
          </section>
        ))}
      </div>
    </div>
  </Container>
</Layout>
