---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Container from '@components/Container.astro';
import Link from '@components/Link.astro';
import BlogItem from '@components/BlogItem.astro';
import { BLOG } from '@consts';

const data = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

type Acc = {
  [year: string]: CollectionEntry<'blog'>[];
};

const posts = data.reduce((acc: Acc, post) => {
  const year = post.data.date.getUTCFullYear().toString();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(posts).sort((a, b) => parseInt(b) - parseInt(a));
---

<Layout title={BLOG.TITLE} description={BLOG.DESCRIPTION}>
  <Container>
    <div class="mb-8 flex items-baseline justify-between">
      <h1 class="text-2xl font-semibold text-black dark:text-white">Blog</h1>
      <Link
        href="/tags/"
        class="font-mono text-[9px] tracking-[0.1em] text-neutral-500 uppercase transition-colors hover:text-black dark:hover:text-white"
      >
        View all topics &rarr;
      </Link>
    </div>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <div class="space-y-8">
          {
            years.map((year) => (
              <section class="animate space-y-4">
                <div class="border-b border-black/5 pb-2 font-semibold text-black dark:border-white/5 dark:text-white">
                  {year}
                </div>
                <div>
                  <ul class="not-prose flex flex-col gap-4">
                    {posts[year].map((post) => (
                      <BlogItem post={post} />
                    ))}
                  </ul>
                </div>
              </section>
            ))
          }
        </div>
      </div>
    </aside>
  </Container>
</Layout>
