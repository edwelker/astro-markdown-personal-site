---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import { getAllHighlights } from "@lib/highlights";

// DELETE THIS LINE IF YOU ARE NOT USING IT:
// import ArrowCard from "@components/ArrowCard.astro";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

// Fetch and slice the top 5
const recentHighlights = (await getAllHighlights()).slice(0, 5);

import { Image } from "astro:assets";
import { getImage } from "astro:assets";
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-extrabold text-3xl text-black dark:text-white">
        Eddie Welker
      </h1>
      <div class="space-y-16">
        <section>
          <article class="space-y-4">
            <p>Programmer, Cyclist, Cellist, Photographer, Cook, Woodworker, MD/NY, USA.</p>
          </article>
        </section>

        <section class="animate space-y-6">
          <ul class="not-prose flex flex-col gap-4">
            {
              await Promise.all( // <--- CRITICAL: AWAIT THE PROMISE.ALL
                blog.map(async (post) => {

                  // 1. Get image source
                  const imageSrc = post.data.heroImage;

                  // 2. Process the image for the teaser strip (KEEP 'const' here!)
                  const teaserImage = imageSrc
                    ? await getImage({
                          src: imageSrc,
                          width: 600,
                          height: 10,
                          format: 'webp',
                          quality: 60
                      })
                    : null;

                  // 3. RETURN the fully rendered list item with the link, image, and text
                  return (
                    <li
                        class="p-4 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-150 flex flex-col"
                    >
                      <Link
                        href={`/blog/${post.slug}`}
                        aria-label={post.data.title}
                      >
                        {/* 1. IMAGE STRIP */}
                        {teaserImage && (
                          <div class="w-full h-[10px] overflow-hidden rounded-t-lg">
                            <Image
                              src={teaserImage.src}
                              width={(teaserImage as any).width ?? 600}
                              height={(teaserImage as any).height ?? 10}
                              alt={`Teaser strip for ${post.data.title}`}
                              style={{
                                  objectFit: 'cover',
                                  filter: 'blur(3px) contrast(1.2)'
                              }}
                            />
                          </div>
                        )}

                        {/* 2. POST TITLE AND DATE (THE MISSING PART) */}
                        <div class="flex flex-col pt-2">
                          <h3 class="text-lg font-semibold text-black dark:text-white">
                            {post.data.title}
                          </h3>
                          <p class="text-sm text-gray-500">
                            {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                          </p>
                        </div>
                      </Link>
                    </li>
                  );
                })
              )
            }
          </ul>
        </section>


        <section class="animate space-y-6">
          <div class="flex flex-wrap gap-y-2 items-center justify-between">
            <h5 class="font-semibold text-black dark:text-white">
              Highlights
            </h5>
            <Link href="/highlights">
              See all highlights
            </Link>
          </div>

          <ul class="flex flex-col gap-4">
            {recentHighlights.map((item) => (
              <li class="flex flex-col gap-1">
                <div class="flex items-baseline gap-2">
                    <Link
                      href={item.url}
                      external={item.url.startsWith("http")}
                      aria-label={item.title}
                    >
                    {item.title}
                    </Link>
                    {/* Arrow for external links */}
                    {item.url.startsWith("http") && <span class="text-xs text-gray-500">↗</span>}
                </div>

                {/* Description */}
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {item.description}

                  {/* Append the em dash and thought if the thought exists */}
                  {item.thought && (
                    <span class="text-sm italic ml-1">
                      — <span set:html={item.thought} />
                    </span>
                  )}
                </p>
              </li>
            ))}
          </ul>
        </section>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            Let's Connect
          </h2>
          <article>
            <p>
                Email is best. Else find me below.
            </p>
          </article>
            <ul class="not-prose flex flex-wrap gap-2">
              {
                SOCIALS.map((SOCIAL, index) => (
                  <li class="flex gap-x-2 text-nowrap">
                    <Link
                      href={SOCIAL.HREF}
                      external
                      aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                    >
                      {SOCIAL.NAME}
                    </Link>
                    {/* Only show slash if NOT the last item */}
                    {index < SOCIALS.length - 1 && "/"}
                  </li>
                ))
              }
            </ul>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
