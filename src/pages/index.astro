---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import { getAllHighlights } from "@lib/highlights";
import FlickrGallery from '@components/FlickrGallery.astro';
import MusicStats from "@components/MusicStats.astro";
import CyclingStats from "@components/CyclingStats.astro";

// DELETE THIS LINE IF YOU ARE NOT USING IT:
// import ArrowCard from "@components/ArrowCard.astro";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

// Fetch and slice the top 5
const recentHighlights = (await getAllHighlights()).slice(0, 5);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-extrabold text-3xl text-black dark:text-white">
        Eddie Welker
      </h1>
      <div class="space-y-16">
        <section>
          <article class="space-y-4">
            <p>Programmer, Cyclist, Cellist, Photographer, Cook, Woodworker, MD/NY, USA.</p>
          </article>
        </section>

        {/* --- BLOG POSTS SECTION --- */}
        <section class="animate space-y-6">
          <div class="flex flex-wrap gap-y-2 items-center justify-between">
            <h5 class="font-semibold text-black dark:text-white">
              Posts
            </h5>
            <Link href="/blog/">
              See all posts
            </Link>
          </div>

          <ul class="not-prose flex flex-col gap-2">
            {blog.map((post) => {
              // --- LOGIC: Check if slug already has a date structure ---
              let href = "";
              if (post.slug.match(/^\d{4}\//)) {
                  href = `/blog/${post.slug}/`;
              } else {
                  const year = post.data.date.getFullYear();
                  const month = String(post.data.date.getMonth() + 1).padStart(2, '0');
                  const day = String(post.data.date.getDate()).padStart(2, '0');
                  href = `/blog/${year}/${month}/${day}/${post.slug}/`;
              }
              // -------------------------------------------------------

              return (
                <li>
                  <div class="group block p-2 -mx-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
                    <div class="flex flex-col gap-1">
                      <Link
                        href={href}
                        class="font-medium text-black dark:text-white group-hover:underline decoration-1 underline-offset-2"
                      >
                        {post.data.title}
                      </Link>

                      <p class="text-sm text-neutral-500">
                        {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                      </p>
                    </div>
                  </div>
                </li>
              );
            })}
          </ul>
        </section>

        {/* --- HIGHLIGHTS SECTION --- */}
        <section class="animate space-y-6">
          <div class="flex flex-wrap gap-y-2 items-center justify-between">
            <h5 class="font-semibold text-black dark:text-white">
              Highlights
            </h5>
            <Link href="/highlights">
              See all highlights
            </Link>
          </div>

          <ul class="flex flex-col gap-2">
            {recentHighlights.map((item) => (
              <li class="relative">
                <div class="group p-2 -mx-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
                  <div class="flex flex-col gap-1">

                    <div class="flex items-baseline gap-2">
                      <Link
                        href={item.url}
                        external={item.url.startsWith("http")}
                        aria-label={item.title}
                        class="font-medium text-black dark:text-white group-hover:underline decoration-1 underline-offset-2"
                      >
                        {item.title}
                      </Link>
                      {item.url.startsWith("http") && <span class="text-xs text-neutral-400">↗</span>}
                    </div>

                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      {item.description}
                      {item.thought && (
                        <span class="text-neutral-500">
                           — <span class="italic" set:html={item.thought} />
                        </span>
                      )}
                    </p>
                  </div>
                </div>
              </li>
            ))}
          </ul>
        </section>

        <section>
            <FlickrGallery />
        </section>

        <section class="animate mt-16 space-y-4">
          <MusicStats />
        </section>

        <div class="mt-24 pt-12 border-t border-dashed border-black/10 dark:border-white/10">
          <CyclingStats />
        </div>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            Let's Connect
          </h2>
          <article>
            <p>
                Email is best. Else find me below.
            </p>
          </article>
            <ul class="not-prose flex flex-wrap gap-2">
              {
                SOCIALS.map((SOCIAL, index) => (
                  <li class="flex gap-x-2 text-nowrap">
                    <Link
                      href={SOCIAL.HREF}
                      external
                      aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                    >
                      {SOCIAL.NAME}
                    </Link>
                    {/* Only show slash if NOT the last item */}
                    {index < SOCIALS.length - 1 && "/"}
                  </li>
                ))
              }
            </ul>
        </section>

      </div>
    </aside>
  </Container>
</Layout>
