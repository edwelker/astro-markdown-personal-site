---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import { getAllHighlights } from "@lib/highlights";

// DELETE THIS LINE IF YOU ARE NOT USING IT:
// import ArrowCard from "@components/ArrowCard.astro";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

// Fetch and slice the top 5
const recentHighlights = (await getAllHighlights()).slice(0, 5);

import { Image } from "astro:assets";
import { getImage } from "astro:assets";
import FlickrGallery from '@components/FlickrGallery.astro';
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-extrabold text-3xl text-black dark:text-white">
        Eddie Welker
      </h1>
      <div class="space-y-16">
        <section>
          <article class="space-y-4">
            <p>Programmer, Cyclist, Cellist, Photographer, Cook, Woodworker, MD/NY, USA.</p>
          </article>
        </section>

        <section class="animate space-y-6">
            <div class="flex flex-wrap gap-y-2 items-center justify-between">
              <h5 class="font-semibold text-black dark:text-white">
                Posts
              </h5>
              <Link href="/blog/">
                See all posts
              </Link>
            </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              // We can now use a simple map function since there are no promises (await) inside
              blog.map((post) => (
                <li
                    // Reusing your list item styling, but keeping it simpler without the flex-col
                    class="py-2 px-0 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors duration-150"
                >
                  <Link
                    href={`/blog/${post.slug}`}
                    aria-label={post.data.title}
                    class="flex flex-col" // Wrap the title/date in the link
                  >
                    {/* POST TITLE AND DATE */}
                    <div class="flex flex-col">
                      <h3 class="text-lg font-semibold text-black dark:text-white">
                        {post.data.title}
                      </h3>
                      <p class="text-sm text-gray-500">
                        {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                      </p>
                    </div>
                  </Link>
                </li>
              ))
            }
          </ul>
        </section>


        <section class="animate space-y-6">
          <div class="flex flex-wrap gap-y-2 items-center justify-between">
            <h5 class="font-semibold text-black dark:text-white">
              Highlights
            </h5>
            <Link href="/highlights">
              See all highlights
            </Link>
          </div>

          <ul class="flex flex-col gap-4">
            {recentHighlights.map((item) => (
              <li class="flex flex-col gap-1">
                <div class="flex items-baseline gap-2">
                    <Link
                      href={item.url}
                      external={item.url.startsWith("http")}
                      aria-label={item.title}
                    >
                    {item.title}
                    </Link>
                    {/* Arrow for external links */}
                    {item.url.startsWith("http") && <span class="text-xs text-gray-500">↗</span>}
                </div>

                {/* Description */}
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {item.description}

                  {/* Append the em dash and thought if the thought exists */}
                  {item.thought && (
                    <span class="text-sm italic ml-1">
                      — <span set:html={item.thought} />
                    </span>
                  )}
                </p>
              </li>
            ))}
          </ul>
        </section>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            Let's Connect
          </h2>
          <article>
            <p>
                Email is best. Else find me below.
            </p>
          </article>
            <ul class="not-prose flex flex-wrap gap-2">
              {
                SOCIALS.map((SOCIAL, index) => (
                  <li class="flex gap-x-2 text-nowrap">
                    <Link
                      href={SOCIAL.HREF}
                      external
                      aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                    >
                      {SOCIAL.NAME}
                    </Link>
                    {/* Only show slash if NOT the last item */}
                    {index < SOCIALS.length - 1 && "/"}
                  </li>
                ))
              }
            </ul>
        </section>

        <section>
            <FlickrGallery />
        </section>
      </div>
    </aside>
  </Container>
</Layout>
