---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import { getAllHighlights } from "@lib/highlights";
import FlickrGallery from '@components/FlickrGallery.astro';
import MusicStats from "@components/MusicStats.astro";
import CyclingStats from "@components/CyclingStats.astro";
import MediaTeaser from "@components/MediaTeaser.astro";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const recentHighlights = (await getAllHighlights()).slice(0, 5);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-extrabold text-3xl text-black dark:text-white">
        Eddie Welker
      </h1>
      
      <nav class="py-4">
        <Link href="/media">movies and tv</Link>
      </nav>

      <div class="space-y-12">
        <section>
          <article class="space-y-4">
            <p>Programmer, Cyclist, Cellist, Photographer, Cook, Woodworker, MD/NY, USA.</p>
          </article>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap gap-y-2 items-center justify-between">
            <h5 class="font-semibold text-black dark:text-white">Posts</h5>
            <Link href="/blog/">See all posts</Link>
          </div>
          <ul class="not-prose flex flex-col gap-2">
            {blog.map((post) => (
              <li>
                <Link href={`/blog/${post.slug}/`}>{post.data.title}</Link>
              </li>
            ))}
          </ul>
        </section>

        <section>
            <FlickrGallery />
        </section>

        <section>
            <MediaTeaser />
        </section>
        
        </div>
    </aside>
  </Container>
</Layout>
