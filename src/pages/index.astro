---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import { getAllHighlights } from "@lib/highlights";
import Flickr from '@components/flickr.astro';
import MusicStats from "@components/MusicStats.astro";
import CyclingStats from "@components/CyclingStats.astro";
import MediaTeaser from "@components/MediaTeaser.astro";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const recentHighlights = (await getAllHighlights()).slice(0, SITE.NUM_HIGHLIGHTS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-extrabold text-3xl text-black dark:text-white">Eddie Welker</h1>
      <div class="space-y-12 mt-4">
        <section>
          <article class="space-y-4">
            <p>Programmer, Cyclist, Cellist, Photographer, Cook, Woodworker, MD/NY, USA.</p>
          </article>
        </section>

        <section class="animate space-y-6">
          <div class="flex justify-between items-baseline pb-4 border-b border-black/10 dark:border-white/10">
            <h3 class="font-semibold text-black dark:text-white text-lg">Highlights</h3>
            <Link href="/highlights" class="text-[9px] font-mono uppercase tracking-[0.1em] text-neutral-400 hover:text-black dark:hover:text-white transition-colors group">
              See All <span class="inline-block transition-transform group-hover:translate-x-0.5">→</span>
            </Link>
          </div>
          <ul class="flex flex-col gap-2">
            {recentHighlights.map((item) => (
              <li class="relative">
                <div class="group p-2 -mx-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
                  <div class="flex flex-col gap-1">
                    <div class="flex items-baseline gap-2">
                      <Link href={item.url} external={item.url.startsWith("http")} aria-label={item.title} class="font-medium text-black dark:text-white group-hover:underline decoration-1 underline-offset-2">
                        {item.title}
                      </Link>
                      {item.url.startsWith("http") && <span class="text-xs text-neutral-400">↗</span>}
                    </div>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      {item.description}
                      {item.thought && (
                        <span class="text-neutral-500"> — <span class="italic" set:html={item.thought} /></span>
                      )}
                    </p>
                  </div>
                </div>
              </li>
            ))}
          </ul>
        </section>

        <section><Flickr /></section>

        <section class="animate"><MusicStats /></section>

        <section class="animate"><CyclingStats /></section>

        <section class="animate"><MediaTeaser /></section>

        <section class="animate space-y-6">
          <div class="flex justify-between items-baseline pb-4 border-b border-black/10 dark:border-white/10">
            <h3 class="font-semibold text-black dark:text-white text-lg">Posts</h3>
            <Link href="/blog/" class="text-[9px] font-mono uppercase tracking-[0.1em] text-neutral-400 hover:text-black dark:hover:text-white transition-colors group">
              Archives <span class="inline-block transition-transform group-hover:translate-x-0.5">→</span>
            </Link>
          </div>
          <ul class="not-prose flex flex-col gap-2">
            {blog.map((post) => {
              let href = post.slug.match(/^\d{4}\//) ? `/blog/${post.slug}/` : `/blog/${post.data.date.getFullYear()}/${String(post.data.date.getMonth() + 1).padStart(2, '0')}/${String(post.data.date.getDate()).padStart(2, '0')}/${post.slug}/`;
              return (
                <li>
                  <div class="group block p-2 -mx-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
                    <div class="flex flex-col gap-1">
                      <Link href={href} class="font-medium text-black dark:text-white group-hover:underline decoration-1 underline-offset-2">{post.data.title}</Link>
                      <p class="text-sm text-neutral-500">{post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</p>
                    </div>
                  </div>
                </li>
              );
            })}
          </ul>
        </section>

        <section class="animate space-y-4">
          <div class="pb-4 border-b border-black/10 dark:border-white/10">
            <h3 class="font-semibold text-black dark:text-white text-lg">Let's Connect</h3>
          </div>
          <article><p>Email is best. Else find me below.</p></article>
          <ul class="not-prose flex flex-wrap gap-2 text-xs">
            {SOCIALS.map((SOCIAL, index) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link href={SOCIAL.HREF} external aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}>{SOCIAL.NAME}</Link>
                {index < SOCIALS.length - 1 && "/"}
              </li>
            ))}
          </ul>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
