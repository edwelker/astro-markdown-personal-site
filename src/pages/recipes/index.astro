---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import Container from '@components/Container.astro';
import { RECIPES } from '@consts';
import RecipeCard from '@components/RecipeCard.astro';

const recipes = (await getCollection('recipes'))
  .filter((recipe) => !recipe.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title={RECIPES.TITLE} description={RECIPES.DESCRIPTION}>
  <Container>
    <div class="animate space-y-8">
      <div class="space-y-4">
        <h1 class="text-3xl font-semibold text-black dark:text-white">Recipes</h1>
        <p class="text-neutral-500">{RECIPES.DESCRIPTION}</p>
      </div>

      <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2">
        {recipes.map((recipe) => <RecipeCard recipe={recipe} underlineOnHover={true} />)}
      </div>
    </div>
  </Container>
</Layout>
