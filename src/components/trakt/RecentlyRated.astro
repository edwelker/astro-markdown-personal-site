---
import type { RatingItem } from './types';

interface Props {
  items: RatingItem[];
}

const { items } = Astro.props;
---

<section class="animate space-y-4 border-t border-black/10 pt-4 dark:border-white/10">
  <h2 class="font-mono text-xs font-bold tracking-[0.3em] text-neutral-500 uppercase">
    Recent Watches
  </h2>
  <div class="grid grid-cols-2 gap-8 sm:grid-cols-4 md:grid-cols-5">
    {
      items.map((item) => (
        <div class="group space-y-3">
          <a
            href={item.href}
            target="_blank"
            class="relative block aspect-[2/3] w-full overflow-hidden rounded-lg border border-black/5 bg-neutral-900 transition-transform hover:scale-[1.02] dark:border-white/5"
          >
            <img
              src={item.poster}
              alt={item.title}
              class="absolute inset-0 m-0 block h-full w-full object-cover p-0"
              loading="lazy"
            />
            <div class="absolute right-2 bottom-2 z-10 flex items-center gap-1 rounded border border-white/10 bg-black/80 px-2 py-1 backdrop-blur-md">
              <span class="text-[11px] leading-none font-bold text-white">
                {item.rating} <span class="font-normal text-orange-500">â˜…</span>
              </span>
            </div>
          </a>
          <div class="px-0.5 leading-tight">
            <p class="text-[14px] leading-tight font-bold text-neutral-800 uppercase dark:text-neutral-200">
              {item.title}
            </p>
            <p class="mt-1 font-mono text-[12px] text-neutral-500">{item.year}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
