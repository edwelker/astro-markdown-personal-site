---
import type { TopListItem } from './types';

interface Props {
  title: string;
  items: TopListItem[];
}

const { title, items } = Astro.props;
---

<section class="space-y-4">
  <h2 class="font-mono text-xs font-bold tracking-[0.3em] text-neutral-500 uppercase">{title}</h2>
  <div class="flex flex-wrap gap-2">
    {
      items.map((item) => (
        <a
          href={item.href}
          target="_blank"
          class="rounded-full border border-black/10 px-2.5 py-1 font-mono text-[10px] font-bold text-neutral-500 uppercase transition-colors hover:border-orange-500 hover:text-orange-600 dark:border-white/10"
        >
          {item.label} <span class="ml-1 text-orange-600">{item.count}</span>
        </a>
      ))
    }
  </div>
</section>
