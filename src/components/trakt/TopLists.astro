---
import type { TopListItem } from "./types";

interface Props {
  title: string;
  items: TopListItem[];
}

const { title, items } = Astro.props;
---

<section class="space-y-4">
  <h2 class="text-xs font-mono uppercase tracking-[0.3em] text-neutral-500 font-bold">{title}</h2>
  <div class="flex flex-wrap gap-2">
    {items.map((item) => (
      <a href={item.href} target="_blank" class="px-2.5 py-1 rounded-full border border-black/10 dark:border-white/10 text-[10px] font-mono uppercase text-neutral-500 hover:border-orange-500 hover:text-orange-600 transition-colors font-bold">
        {item.label} <span class="text-orange-600 ml-1">{item.count}</span>
      </a>
    ))}
  </div>
</section>
