---
import musicData from "../data/music.json";

// Define the type for items to satisfy TypeScript
type Item = {
  name: string;
  url: string;
  image: string;
  artist?: string;
  plays?: string | number
};

// Destructure from the NEW data shape (week, month, etc.)
const { week, month } = musicData;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">

  {/* --- COLUMN 1: THIS WEEK --- */}
  <div class="space-y-4">
    <h3 class="font-semibold text-black dark:text-white border-b border-black/10 dark:border-white/10 pb-2">
      This Week
    </h3>

    {/* Weekly Albums (Top 3) */}
    <div class="grid grid-cols-3 gap-3">
      {week.albums.slice(0, 3).map((alb: Item) => (
        <a href={alb.url} target="_blank" class="group block space-y-1" title={`${alb.name} by ${alb.artist}`}>
          <img
            src={alb.image}
            alt={alb.name}
            class="rounded-sm w-full grayscale group-hover:grayscale-0 transition-all duration-300 border border-neutral-200 dark:border-neutral-800"
            loading="lazy"
          />
        </a>
      ))}
    </div>

    {/* Weekly Artists (Top 5) */}
    <ul class="space-y-1">
      {week.artists.slice(0, 5).map((art: Item, i: number) => (
        <li class="flex justify-between text-sm group">
          <a href={art.url} target="_blank" class="truncate text-neutral-600 dark:text-neutral-400 group-hover:text-black dark:group-hover:text-white transition-colors">
            <span class="mr-2 text-neutral-300 font-mono text-xs">{i + 1}</span>
            {art.name}
          </a>
          <span class="text-xs font-mono text-neutral-400">{art.plays}</span>
        </li>
      ))}
    </ul>
  </div>

  {/* --- COLUMN 2: THIS MONTH --- */}
  <div class="space-y-4">
    <h3 class="font-semibold text-black dark:text-white border-b border-black/10 dark:border-white/10 pb-2">
      This Month
    </h3>

    {/* Monthly Albums (Top 3) */}
    <div class="grid grid-cols-3 gap-3">
      {month.albums.slice(0, 3).map((alb: Item) => (
        <a href={alb.url} target="_blank" class="group block space-y-1" title={`${alb.name} by ${alb.artist}`}>
          <img
            src={alb.image}
            alt={alb.name}
            class="rounded-sm w-full grayscale group-hover:grayscale-0 transition-all duration-300 border border-neutral-200 dark:border-neutral-800"
            loading="lazy"
          />
        </a>
      ))}
    </div>

    {/* Monthly Artists (Top 5) */}
    <ul class="space-y-1">
      {month.artists.slice(0, 5).map((art: Item, i: number) => (
        <li class="flex justify-between text-sm group">
          <a href={art.url} target="_blank" class="truncate text-neutral-600 dark:text-neutral-400 group-hover:text-black dark:group-hover:text-white transition-colors">
            <span class="mr-2 text-neutral-300 font-mono text-xs">{i + 1}</span>
            {art.name}
          </a>
          <span class="text-xs font-mono text-neutral-400">{art.plays}</span>
        </li>
      ))}
    </ul>
  </div>

</div>
