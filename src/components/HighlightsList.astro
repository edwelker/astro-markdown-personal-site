---
import Link from "@components/Link.astro";

const { items } = Astro.props;
---

<section class="animate space-y-6" data-testid="highlights-section">
  <div class="flex justify-between items-baseline pb-4 border-b border-black/10 dark:border-white/10">
    <h3 class="font-semibold text-black dark:text-white text-lg">Highlights</h3>
    <Link href="/highlights/" class="text-[9px] font-mono uppercase tracking-[0.1em] text-neutral-400 hover:text-black dark:hover:text-white transition-colors group">
      See All <span class="inline-block transition-transform group-hover:translate-x-0.5">→</span>
    </Link>
  </div>
  <ul class="flex flex-col gap-2">
    {items.map((item) => (
      <li class="relative">
        <div class="group p-2 -mx-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
          <div class="flex flex-col gap-1">
            <div class="flex items-baseline gap-2">
              <Link href={item.url} external={item.url.startsWith("http")} aria-label={item.title} class="font-medium text-black dark:text-white group-hover:underline decoration-1 underline-offset-2">
                {item.title}
              </Link>
              {item.url.startsWith("http") && <span class="text-xs text-neutral-400">↗</span>}
            </div>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {item.description}
              {item.thought && (
                <span class="text-neutral-500"> — <span class="italic" set:html={item.thought} /></span>
              )}
            </p>
          </div>
        </div>
      </li>
    ))}
  </ul>
</section>
