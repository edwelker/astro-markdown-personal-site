---
// This component is used on the homepage to show a teaser list of recent blog posts.
import Link from '@components/Link.astro';
import BlogItem from '@components/BlogItem.astro';

const { posts } = Astro.props;
---

<section class="animate space-y-6" data-testid="posts-section">
  <div
    class="flex items-baseline justify-between border-b border-black/10 pb-4 dark:border-white/10"
  >
    <h3 class="text-lg font-semibold text-black dark:text-white">Blog</h3>
    <Link
      href="/blog/"
      class="group font-mono text-[9px] tracking-[0.1em] text-neutral-400 uppercase transition-colors hover:text-black dark:hover:text-white"
    >
      Archives <span class="inline-block transition-transform group-hover:translate-x-0.5">â†’</span>
    </Link>
  </div>
  <ul class="flex flex-col gap-2">
    {posts.map((post) => <BlogItem post={post} />)}
  </ul>
</section>
