---
import Container from "@components/Container.astro";
import Icon from "@components/Icon.astro"; // Changed import
import { SITE, SOCIALS } from "@consts";
---

<footer class="mt-auto py-8">
  <Container>
    <div class="flex flex-col items-center gap-4">
      <div class="flex flex-wrap justify-center gap-4">
        {SOCIALS.map((social) => (
          <a
            href={social.HREF}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={social.NAME}
            class="text-black/60 hover:text-black dark:text-white/60 dark:hover:text-white transition-colors"
          >
            <Icon name={social.NAME} class="h-5 w-5 fill-current" />
          </a>
        ))}
      </div>

      <div class="text-sm text-black/50 dark:text-white/50 text-center">
        &copy; {new Date().getFullYear()} {SITE.TITLE}. All rights reserved.
      </div>
    </div>
  </Container>
</footer>
