---
const links = [
  { href: "/about", label: "About" },
  { href: "/blog", label: "Archive" },
  { href: "/highlights", label: "Highlights" },
  { href: "/media", label: "Media" },
  { href: "/music", label: "Music" },
  { href: "/recipes", label: "Recipes" },
];
---

<nav class="flex flex-wrap justify-center gap-x-6 gap-y-3 text-sm font-medium text-black/60 dark:text-white/60">
  {links.map((link) => (
    <a 
      href={link.href} 
      class="hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out"
    >
      {link.label}
    </a>
  ))}
</nav>
