---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagefind from "@components/PageFind.astro";
import Analytics from "@components/Analytics.astro";

import "@fontsource/inter";
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';

type Props = {
  title: string;
  description: string;
  image?: string;
};

import { SITE } from "@consts";

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    {/* Pass the image prop down to Head */}
    <Head title={`${title} | ${SITE.TITLE}`} description={description} image={image} />

    {/* 3. Add Analytics here */}
    <Analytics />
  </head>
  <body>
    <noscript>
      <style>
        .animate{
          opacity:1;
          translate: var(--tw-translate-x) calc(var(--spacing) * 0);
        }
      </style>
    </noscript>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Pagefind />
  </body>
</html>
