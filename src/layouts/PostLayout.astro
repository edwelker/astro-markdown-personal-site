---
// src/layouts/PostLayout.astro (Based on your working PageLayout)
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import BlogFeaturedImage from "@components/BlogFeaturedImage.astro";

// Make sure this is present to access the frontmatter:
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <Container>
    <article class="space-y-4 prose prose-neutral dark:prose-invert max-w-none">

        <header>
            <h1 class="text-3xl mb-4">{frontmatter.title}</h1>

            {frontmatter.coverImage && (
                <BlogFeaturedImage 
                    coverImage={frontmatter.coverImage} 
                    alt={frontmatter.coverImageAlt}
                    title={frontmatter.title}
                />
            )}
        </header>

        <slot />

    </article>
  </Container>
</Layout>
