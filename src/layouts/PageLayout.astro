---
import Layout from '@layouts/Layout.astro';
import Container from '@components/Container.astro';

const { title, description, frontmatter } = Astro.props;

const displayTitle = title || frontmatter?.title;
const displayDescription = description || frontmatter?.description;
---

<Layout title={displayTitle} description={displayDescription}>
  <Container>
    <div class="animate font-semibold text-black dark:text-white">
      <h1 class="mb-6 text-3xl">{displayTitle}</h1>
    </div>

    <article class="prose prose-neutral dark:prose-invert max-w-none space-y-4">
      <slot />
    </article>
  </Container>
</Layout>
