{
  "name": "web",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run fetch && npm run mvdata && npm test && astro build && npm run test:artifacts",
    "preview": "astro preview",
    "fetch": "node scripts/run-all.mjs",
    "test": "vitest run --exclude tests/artifacts.test.ts --exclude tests/sitemap-integrity.test.ts",
    "test:cov": "vitest run --coverage --exclude tests/artifacts.test.ts --exclude tests/sitemap-integrity.test.ts",
    "test:artifacts": "vitest run tests/artifacts.test.ts tests/sitemap-integrity.test.ts",
    "test:local": "npm test && npx playwright test --config=playwright.config.local.mjs",
    "test:build": "npx playwright test --config=playwright.config.build.mjs",
    "test:update": "npx playwright test --config=playwright.config.local.mjs --update-snapshots",
    "clean": "rm -rf dist .astro src/data/*.json",
    "mvdata": "mkdir -p public/data; cp src/data/*.json public/data"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.5",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource/inter": "^5.2.8",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.9",
    "astro-pagefind": "^1.8.5",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "astro-seo-schema": "^5.1.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.18",
    "@vitest/coverage-v8": "^4.0.16",
    "gray-matter": "^4.0.3",
    "vitest": "^4.0.16"
  }
}
